@page "/Odzyskiwanie"
@using ImageAnnotationToolDataAccessLibrary.Models.TeamManagement;
@using System.ComponentModel.DataAnnotations;

<PageTitle>Odzyskiwanie</PageTitle>


<form>
  <fieldset>
